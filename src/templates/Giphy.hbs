<div class="giphy-embed">
    {{#if options.responsive}}
        <div style="width:100%;height:0;padding-bottom:100%;position:relative;">
            <iframe src="https://giphy.com/embed/{{id}}" width="100%" height="100%" style="position:absolute"
            frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
        </div>
    {{else}}
    <iframe src="https://giphy.com/embed/{{id}}" width="480" height="480" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
    {{/if}}
</div>