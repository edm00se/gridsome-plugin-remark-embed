{{#if options.responsive}}
<div style="padding:56.25% 0 0 0;position:relative;"><iframe
        src="https://player.vimeo.com/video/{{id}}?autoplay={{#if options.autoplay}}1{{else}}0{{/if}}&loop={{#if options.loop}}1{{else}}0{{/if}}"
        style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen"
        allowfullscreen></iframe></div>
{{else}}
    <iframe 
        src="https://player.vimeo.com/video/{{id}}?autoplay={{#if options.autoplay}}1{{else}}0{{/if}}&loop={{#if options.loop}}1{{else}}0{{/if}}"
        width="{{options.width}}" 
        height="{{options.height}}"
        frameborder="0" 
        allow="autoplay; fullscreen" allowfullscreen>
    </iframe>
{{/if}}